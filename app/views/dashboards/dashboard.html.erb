<div class="container-dashboard-page">

  <div class="search-bar">

    <div class="search-left">
      <div class="search-title">
        <h2>Community</h2>
      </div>
      <div class="search-field">
        <%# expertise tag search bar %>
          <%= form_tag dashboard_path, method: :get do %>
          <%= select_tag(:expertise_id, options_for_select(Expertise.order(:name).pluck(:name, :id) ,:selected =>params[:expertise_id]), onchange: 'this.form.submit();', class: "form-control custom-select bg-white rounded shadow", style: "width: 100%;", include_blank: "Filter by Expertises")%>
          <% end %>
      </div>
    </div>

    <div class="search-right">
      <div class="search-title">
        <h2>Events</h2>
      </div>
      <%# categories tag search bar %>
      <div class="search-field">
        <%= form_tag dashboard_path, method: :get do %>
          <%= select_tag(:category_id, options_for_select(Category.order(:name).pluck(:name, :id) ,:selected =>params[:category_id]), onchange: 'this.form.submit();', class: "form-control custom-select bg-white ms-3 rounded shadow", style: "width: 100%;", include_blank: "Filter by Categories")%>
        <% end %>
      </div>
    </div>

  </div>

  <div class="row" style="padding-top: 30px">
    <div class="col-6">

        <%# iterate through all the profiles %>
      <div class="cards">
        <div class="grid-template">
          <% @profiles.each do |profile| %>
            <%# Paul: This renders the partial of the profile card. %>
            <%= render "shared/profile_card", profile: profile %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-6 parent-for-sticky-map">


      <%# iterate through all the events %>
      <div class="cards-event fixed">
        <% @events.each do |event| %>
          <%# Paul: This renders the partial of the event card. %>
          <%= render "shared/event_card", event: event %>
        <% end %>
      </div>
      <%# This is the mapbox div %>
      <div style="width: 605px; height: 313px;", class="ms-3 sticky-map"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

    </div>
  </div>
</div>
